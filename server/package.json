{
  "name": "team-radio-server",
  "version": "1.0.0-SNAPSHOT",
  "description": "Team radio server",
  "main": "build/bundle.js",
  "scripts": {
    "predev": "npm run compile",
    "dev": "npm-run-all --parallel nodemon watch",
    "build": "npm run compile -- --env.NODE_ENV=production",
    "start": "node .",
    "nodemon": "nodemon",
    "compile": "webpack",
    "watch": "npm run compile -- --env.watch=enable",
    "clean": "rm -rf build",
    "migrate:up": "node build/migrate up",
    "migrate:down": "node build/migrate down",
    "migrate:create": "migrate create --template-file .template/migration-template.ts",
    "postmigrate:create": "cp -r migrations/* src/migrations && rm -rf migrations",
    "docs": "graphdoc"
  },
  "dependencies": {
    "@2fd/graphdoc": "^2.4.0",
    "apollo-server-express": "^2.2.5",
    "axios": "^0.18.0",
    "bcrypt-nodejs": "0.0.3",
    "class-transformer": "^0.2.0",
    "class-validator": "^0.9.1",
    "express": "^4.16.4",
    "graphql": "^14.0.2",
    "graphql-subscriptions": "^1.0.0",
    "http-status-codes": "^1.3.0",
    "migrate": "^1.6.2",
    "mongodb": "^3.1.10",
    "slugify": "^1.3.3",
    "team-radio-shared": "../shared",
    "type-graphql": "^0.15.0",
    "typedi": "^0.8.0",
    "typeorm": "^0.2.9",
    "typeorm-typedi-extensions": "^0.2.1",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@types/bcrypt-nodejs": "0.0.30",
    "@types/graphql": "^14.0.3",
    "@types/mongodb": "^3.1.17",
    "@types/node-fetch": "^2.1.3",
    "@types/winston": "^2.4.4",
    "dotenv": "^5.0.1",
    "dotenv-webpack": "^1.5.7",
    "nodemon": "^1.18.6",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.15.3",
    "prettier-loader": "^2.1.1",
    "ts-loader": "^5.3.0",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.16.0",
    "typescript": "^3.2.1",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2",
    "webpack-node-externals": "^1.7.2",
    "yargs": "^12.0.2"
  },
  "keywords": [
    "team-radio",
    "team-radio-server",
    "typescript",
    "webpack",
    "winston",
    "express",
    "graphql",
    "typedi",
    "typeorm",
    "type-graphql",
    "graphql",
    "mongodb",
    "migration"
  ],
  "graphdoc": {
    "logo": "<a href='/' target='_blank' style='display:block'><img src='/admin/favicon.png' /><span style='margin-left: 1em'>Team radio GraphQL API</span></a>",
    "output": "./build/docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mgm-interns/team-radio.git"
  },
  "author": "@pvtri96",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mgm-interns/team-radio/issues"
  }
}
